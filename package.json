{
  "name": "simple-npm-module",
  "version": "1.0.0",
  "description": "This is an NPM module! ",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "prepublish": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check \"./**/*.{ts,tsx,js,css,json,md}\"",
    "format:fix": "prettier --write  \"./**/*.{ts,tsx,js,css,json,md}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evargast/simple-npm-module.git"
  },
  "keywords": [],
  "author": "Eduardo Vargas <eduardo@adobe.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/evargast/simple-npm-module/issues"
  },
  "homepage": "https://github.com/evargast/simple-npm-module#readme",
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-loader": "^8.1.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.9.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "sass-loader": "^10.0.2",
    "ts-jest": "26.4.3",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {},
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
